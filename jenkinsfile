pipeline {
	agent any {
		stages {
		    stage('Clone') {
		        steps{
    		    	checkout scm
    		    }
		    }
			stage('Build') {
			    steps {
				    sh "echo $USER"
				    sh "python --version"
				    sh "pip install -r requirements.txt"
				}
			}
			stage('Test') {
			    steps {
    				sh pytest
    	        }
			}
		}
	}
}